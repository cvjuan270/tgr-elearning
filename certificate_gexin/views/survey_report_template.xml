                            <!--             stroke-linejoin="round" -->
                            <!--             stroke-width="2" -->
                            <!--             d="M3 12a9 9 0 1 0 18 0a9 9 0 1 0-18 0m9 0H8.5M12 7v5" -->
                            <!--         /> -->
                            <!--     </svg> -->
                            <!-- </div> -->
                            <!-- <p style="font-size: 14px; color: grey; margin: 2px;">Realizado en Surco - Lima, Perú</p> -->
                            <!-- <p style="font-size: 14px; color: grey; margin: 2px;">25 de SEPTIEMBRE del 2024</p> -->
                            <span style="color:grey">Fecha:</span>
                            <div
                                style="font-size: 14px; color: grey; margin: 2px;"
                                t-field="user_input.create_date"
                                t-options='{"widget": "date"}'
                            />
                            <br />
                            <div class="certification-number" t-if="user_input.scoring_success">
                                Certificación n°
                                <t t-esc="str(user_input.id).rjust(10, '0')" />
                            </div>
                        </div>
                    </div>
                </div>
