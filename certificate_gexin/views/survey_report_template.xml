<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- oca-hooks:disable=xml-dangerous-qweb-replace-low-priority  -->
    <template id="certification_report_view_general_inherit" inherit_id="survey.certification_report_view_modern">
        <xpath expr="//div[@id='o_survey_certification']" position="replace">
            <div
                id="o_survey_certification"
                t-att-data-oe-model="user_input._name"
                t-att-data-oe-id="user_input.id"
                t-att-class="'article certification-wrapper modern %s' % layout_color"
            >
                <div
                    class="row"
                    style="width:295mm;height:208mm;margin:1mm;background-image: url('/certificate_gexin/static/src/img/gexin_background.jpeg');background-size: cover; background-position: center;background-repeat: no-repeat;"
                >
                    <div class="col-4" />
                    <div class="col-8" style="margin: 210px 50px 0px; text-align: center; ">
                        <!-- Titulo -->
                        <div>
                            <h1 style="margin: 0px; font-size: 35px; font-weight:bold; color: #3094BA;">CERTIFICADO</h1>
                            <h1 style="margin: 0px; font-size: 23px; color: grey;">DE CAPACITACIÓN</h1>
                        </div>

                        <!-- Usuario -->
                        <div style="margin: 0px 0px 15px; display: flex; flex-direction: column; align-items: center;">
                            <p style="font-size: 16px; color: grey; margin: 5px; ">Otorgado a:</p>
                            <p
                                style="margin: 10px 10px 5px; font-size: 25px; color: #1496CD; font-weight: bold; font-style:italic; text-transform: capitalize;"
                            >
                                <t t-set="certif_style" t-value="''" />
                                <t
                                    t-set="certified_name"
                                    t-value="user_input.partner_id.name or user_input.email or ''"
                                />
                                <t t-if="certified_name.isupper()">
                                    <t
                                        t-set="certif_style"
                                        t-value="certif_style + 'font-family: certification-serif;'"
                                    />
                                </t>
                                <t t-if="len(certified_name) > 20">
                                    <t
                                        t-set="certif_style"
                                        t-value="certif_style + 'font-size: 40px; line-height: 4;'"
                                    />
                                </t>
                                <span t-att-style="certif_style" class="user-name" t-esc="certified_name" />
                            </p>
                            <div style="background-color: #1496CD; width: 50%; height: 2px;margin: 20px auto;" />
                        </div>

                        <!-- Tema -->
                        <div>
                            <br />
                            <span style="color:grey;font-weight: bold; font-size: 16px ">
                                Por
                                <t t-esc="user_input.env.company.display_name" />
                            </span>
                            <p style="font-size: 16px; color: grey; margin: 10px; ">
                                Por haber completado con éxito
                                <br />
                            </p>
                        </div>
                        <div style="border-radius: 10px; border: 1px #1496CD solid; width:80%;margin:20px auto">
                            <p
                                style="color: #1496CD; text-transform: uppercase; font-style: italic; font-weight: bold; font-size: 14px; padding: 0px 4px; "
                            >
                                <br />
                                <b>
                                    <span class="certification-name" t-field="user_input.survey_id.display_name" />
                                </b>
                            </p>
                        </div>
                        <div>
                            <!-- <div style="display: flex; align-items: center; justify-content: center;"> -->
                            <!--     <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"> -->
