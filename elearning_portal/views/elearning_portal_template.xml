<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
    id="portal_my_home_elearning"
    name="Show Courses"
    customize_show="True"
    inherit_id="portal.portal_my_home"
    priority="20"
  >
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Mis Cursos</t>
                <t t-set="url" t-value="'/slides'" />
                <t t-set="placeholder_count" t-value="'slide_channel_count'" />
            </t>
        </xpath>
    </template>
</odoo>
